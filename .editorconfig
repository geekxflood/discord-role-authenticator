# EditorConfig configuration for applicationset repository
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# YAML files (Kubernetes manifests, Helm values, templates)
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Go template files (Helm charts)
[*.tpl]
indent_style = space
indent_size = 2

# Makefile (must use tabs)
[Makefile]
indent_style = tab
indent_size = 4
